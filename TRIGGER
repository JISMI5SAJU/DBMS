CREATE TABLE EMP(EID INT UNIQUE,ENAME VARCHAR(90),SALARY INT);
CREATE OR REPLACE TRIGGER TRIGGER2
AFTER INSERT OR UPDATE ON EMP
FOR EACH ROW
WHEN(NEW.SALARY>20000)
BEGIN
DBMS_OUTPUT.PUT_LINE('SALARY IS GREATER THAN 20000');
END;
/

Trigger created.


OUTPUT:

INSERT INTO EMP VALUES(11,'GIGO',50000);

1 row(s) inserted.
SALARY IS GREATER THAN 20000.


UPDATE EMP
SET SALARY=35000
WHERE EID=11;

1 row(s) updated.
SALARY IS GREATER THAN 20000
